<?xml version="1.0" encoding="UTF-8"?>

<!--
  Deployment descriptor for the dental-center-app.
  - Sets the application display name.
  - Defines index.jsp as the welcome file.
  - Maps the default servlet to serve static resources under /resources/*.
-->

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  
  <display-name>dental-center-app</display-name>
  
  <welcome-file-list>
    	<welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet-mapping>
  		<servlet-name>default</servlet-name>
  		<url-pattern>/resources/*</url-pattern>
  </servlet-mapping>
</web-app>